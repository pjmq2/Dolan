@using System.Linq
@using System.Web.Mvc.Html;
@using IngeDolan3._0.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dolansoft</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Formato.css")
    @Styles.Render("~/Content/multi-select.css")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dolansoft", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Permisoes")"><a href="@Url.Action("Index", "Permisoes")" class="inlineText"></i>Permisos</a></li>
                    
                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Users") @Html.IsSelected(actions: "Register", controllers: "Account")"><a href="@Url.Action("Index", "Users")" class="inlineText"></i>Usuarios</a></li>
                    
                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Projects")"><a href="@Url.Action("Index", "Projects")" class="inlineText"></i>Proyectos</a></li>
                    
                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Backlog,UserStories,Milestones,Scenarios")"><a href="@Url.Action("Index", "Backlog")" class="inlineText"></i>Backlog</a></li>

                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Milestones")"><a href="@Url.Action("Index", "Milestones")" class="inlineText"></i>Hitos</a></li>

                    <li class="side-li @Html.IsSelected(actions: "Index,Edit,Delete,Create,Details", controllers: "Scenarios")"><a href="@Url.Action("Index", "Scenarios")" class="inlineText"></i>Escenarios</a></li>


                    @*@if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Cambiar Contraseña", "ChangePassword", "Manage")</li>
                        }*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dolansoft</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script>
        $(document).ready(function () {
            $(".ajax").on("click", function (e) {
                e.preventDefault();
                var elementUrl = $(this).attr('href');
                $.ajax({
                    url: elementUrl,
                    cache: false,
                    success: function (data) {
                        $('#TargetDiv').html(data);
                    }
                });
            });
        });
    </script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery.multi-select")
    @RenderSection("scripts", required: false)
</body>
</html>
