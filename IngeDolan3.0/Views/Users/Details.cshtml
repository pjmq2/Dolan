    @model IngeDolan3._0.Models.User

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div class="navbar-right" style="display:inline-block;">
    @Html.ActionLink("Editar", "Edit", new { id = Model.AspNetUser.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Borrar", "Delete", new { id = Model.AspNetUser.Id }, new { @class = "btn btn-default" })
</div>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Primer Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstLastName)
        </dd>

        <dt>
            Segundo Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.secondLastName)
        </dd>

        <dt>
            Cédula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.person_id)
        </dd>

        @if (Model != null && !String.IsNullOrEmpty(Model.student_id))
        {
            <dt>
                Carnet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.student_id)
            </dd>
        }

        <dt>
            Correo Electrónico
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetRole.Name)
        </dd>       

    </dl>
</div>
