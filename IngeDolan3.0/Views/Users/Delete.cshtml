@model IngeDolan3._0.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrar</h2>

<h3>¿Realmente desea borrar el usuario seleccionado?</h3>
<div>
    <div class="navbar-right" style="display:inline-block;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.AspNetUser.Id)

            <input type="submit" value="Borrar" formaction="Delete" class="btn btn-default" />
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
        }
    </div>

    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Primer Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstLastName)
        </dd>

        <dt>
            Segundo Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.secondLastName)
        </dd>

        <dt>
            Cédula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.person_id)
        </dd>

        @if (Model != null && !String.IsNullOrEmpty(Model.student_id))
        {
            <dt>
                Carnet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.student_id)
            </dd>
        }

        <dt>
            Correo Electrónico
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetRole.Name)
        </dd>

    </dl>
</div>
