@model IngeDolan3._0.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar</h2>

<h3>¿Realmente desea borrar el usuario seleccionado?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Primer Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstLastName)
        </dd>

        <dt>
            Segundo Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.secondLastName)
        </dd>

        <dt>
            Cédula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.person_id)
        </dd>

        @if (Model != null && !String.IsNullOrEmpty(Model.student_id))
        {
            <dt>
                Carnet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.student_id)
            </dd>
        }

        <dt>
            Correo Electrónico
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        <dt>
            Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetRole.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
