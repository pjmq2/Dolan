@model IngeDolan3._0.Models.Milestone

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div class="navbar-right" style="display:inline-block;">
    @Html.ActionLink("Editar", "Edit", new { milestoneID = Model.MilestoneID }, new { @class = "btn btn-default" })
    @Html.ActionLink("Borrar", "Delete", new { milestoneID = Model.MilestoneID }, new { @class = "btn btn-default" })
</div>

<div>
    <h4>Hito</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectTask.Descripcion)
        </dd>

        <dt>
            Fecha
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Progreso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Progreso)
        </dd>

    </dl>
</div>

<div class="form-actions no-color">
    @Html.ActionLink("Regresar", "Index", new { projectId = Model.ProjectID, storyId = Model.StoryID, taskId = Model.TaskID }, new { @class = "btn btn-default" })
</div>
