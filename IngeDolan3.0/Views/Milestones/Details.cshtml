@model IngeDolan3._0.Models.ProjectTask

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>


<div class="navbar-right" style="display:inline-block;">
    @Html.ActionLink("Editar", "Edit", new { projectId = Model.ProjectID, storyId = Model.StoryID, taskId = Model.TaskID }, new { @class = "btn btn-default" })
    @Html.ActionLink("Borrar", "Delete", new { projectId = Model.ProjectID, storyId = Model.StoryID, taskId = Model.TaskID }, new { @class = "btn btn-default" })
</div>

<div>

    <h4>Tarea</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            Tiempo Estimado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstimateTime)
        </dd>

        <dt>
            Prioridad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            Modulo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserStory.Modulo)
        </dd>

        <dt>
            Responsable
        </dt>

        <dd>
            @ViewBag.Username
        </dd>

    </dl>
</div>
<div class="form-actions no-color">
    @Html.ActionLink("Regresar", "Index", new { projectId = Model.ProjectID, storyId = Model.StoryID }, new { @class = "btn btn-default" })
</div>
