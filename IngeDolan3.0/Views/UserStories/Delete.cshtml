@model IngeDolan3._0.Models.UserStory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Realmente desea borrar la historia de usuario seleccionada?</h3>
<div>
    <div class="navbar-right" style="display:inline-block;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.StoryID)
            @Html.HiddenFor(model => model.ProjectID)
            
            <input type="submit" value="Borrar" formaction="Delete" class="btn btn-default" />
            <input type="submit" value="Regresar" formaction="Cancel" class="btn btn-default" />
        }
    </div>
    <h4>Historia de Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id de la historia de Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SprintID)
        </dd>

        <dt>
            Alias
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Alias)
        </dd>

        <dt>
            Rol del cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientRole)
        </dd>

        <dt>
            Funcionalidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Funtionality)
        </dd>

        <dt>
            Razón
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reason)
        </dd>

        <dt>
            Prioridad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priorities)
        </dd>

        <dt>
            Estimación
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estimation)
        </dd>

        <dt>
            Proyecto al que pertenece
        </dt>

        <dd>
            @ViewBag.nombreProyecto.ProjectName
        </dd>
    </dl>
</div>
