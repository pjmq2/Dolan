@model IngeDolan3._0.Models.RoleInt

@{
    ViewBag.Title = "Editar permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm("Edit", "Permisoes", FormMethod.Post)){


    //@using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

         @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Permiso</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.testSring, "Nombre*", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.testSring, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />

                <input type="reset" value="Cancelar" class="btn btn-default" />
            </div>
        </div>
    </div>

    <style type="text/css">
        .required:after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>
    <script>
        window.onload = function () {
            $('#listica').multiSelect();
            $('.datePicker').datepicker();
        };
    </script>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
