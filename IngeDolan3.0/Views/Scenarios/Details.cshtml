@model IngeDolan3._0.Models.Scenario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>


<div class="navbar-right" style="display:inline-block;">
    @Html.ActionLink("Editar", "Edit", new { projectId = Model.ProjectID, storyId = Model.StoryID, ScenarioId = Model.ScenarioNumber }, new { @class = "btn btn-default" })
    @Html.ActionLink("Borrar", "Delete", new { projectId = Model.ProjectID, storyId = Model.StoryID, ScenarioId = Model.ScenarioNumber }, new { @class = "btn btn-default" })
</div>

<div>

    <h4>Escenario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Numero
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ScenarioNumber)
        </dd>

        <dt>
            Criterio Aceptacion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AcceptanceCriteria)
        </dd>

        <dt>
            Contexto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Context)
        </dd>

        <dt>
            Evento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event)
        </dd>

        <dt>
            Resultado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Resultado)
        </dd>

    </dl>
</div>
<div class="form-actions no-color">
    @Html.ActionLink("Regresar", "Index", new { projectId = Model.ProjectID, storyId = Model.StoryID }, new { @class = "btn btn-default" })
</div>
