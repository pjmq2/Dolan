@model IEnumerable<IngeDolan3._0.Models.Sprint>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<h4>Sprints</h4>
<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { projectId = ViewBag.ProjectID }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SprintID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SprintID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinalDate)
        </td>
        <td>
            @Html.ActionLink("Planificar", "Index", "ProjectTasks", new { projectId = item.ProjectID, storyId = item.UserStories })
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { projectId = item.ProjectID, sprintId = item.SprintID })
        </td>
    </tr>
}

</table>
